@{
    ViewBag.Title = "Joel's Movie List";
}

@model IEnumerable<Assignment3.Models.MovieResponse>

@*
    Creating a table to store movie data w/ columns and rows. Each row = one movie, each column = specific movie details.
*@

<div>
    <h2>Here are the movies currently on the list:</h2>

    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
        </thead>

        <tbody>
            @foreach (Assignment3.Models.MovieResponse x in Model)
            {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>@x.MovieID</td>
                <form method="post" asp-action="Edit"><input hidden asp-for="@x.MovieID"/><td><button>Edit</button></td></form>
                <form method="post" asp-action="Remove"><input hidden value="@x.MovieID" name="RemovedID"/><td><button>Delete</button></td></form>
            </tr>
            }
        </tbody>
    </table>

</div>


