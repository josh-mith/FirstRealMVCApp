@{
    ViewBag.Title = "The Joel Hilton Movie Collection";
}

@model Assignment3.Models.MovieResponse

<form asp-action="MovieSubmission" method="post">
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
        <br />
    </div>
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <br />
    </div>
    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
        <br />
    </div>
    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <br />
    </div>
    <div>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option>Select One</option>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
        <br />
    </div>
    <div>
        <label asp-for="Edited">Is this copy of the movie edited?</label>
        <select asp-for="Edited">
            <option>Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
    </div>
    <div>
        <label asp-for="LentTo">Who is currently borrowing these movies?</label>
        <input asp-for="LentTo" />
        <br />
    </div>
    <div>
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" />
        <br />
    </div>

    <button type="submit">Submit Movie</button>
    <br />

    <div asp-validation-summary="All"></div>
</form>
