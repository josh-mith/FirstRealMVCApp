<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!--This is my big, beautiful navbar-->
        <nav class="navbar navbar-expand-xl navbar-dark bg-primary">
            <a class="navbar-brand" asp-action="Index">Movie Collection</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Create">
                            Submit a Movie
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <h1 class="row justify-content-center">@ViewBag.Title</h1>

    @RenderBody()

    <br />
    <br />
    @RenderSection("scripts", false)
</body>

</html>
